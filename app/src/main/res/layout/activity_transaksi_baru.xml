<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context=".TransaksiBaruActivity">

    <ImageView
        android:id="@+id/orangeBox"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="25dp"
        android:background="@drawable/rectanglebg"
        android:contentDescription="orangeBox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <!--    MENU    -->
    <ImageView
        android:id="@+id/img_pahab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:contentDescription="pahaBawah"
        android:src="@drawable/pahabawah12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/img_pahab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:contentDescription="pahaBawah"
        android:src="@drawable/pahabawah1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginStart="120dp"
        android:fontFamily="@font/jockey_one"
        android:shadowColor="#000000"
        android:shadowDx="5.0"
        android:shadowDy="5.0"
        android:shadowRadius="1.0"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#F9E533"
        android:text="Paha Bawah"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText"/>

    <!-- Edit Text is used to Enter
    Item Quantity by user-->
    <EditText
        android:id="@+id/etPahaBawahQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginStart="240dp"
        android:layout_weight="1"
        android:hint="@string/etQuantity2"
        android:inputType="number"
        android:maxLength="3"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:autofillHints="" />

    <ImageView
        android:id="@+id/tambah_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginStart="290dp"
        android:contentDescription="sayap"
        android:src="@drawable/tambah"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText"/>

    <ImageView
        android:id="@+id/kurang_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginStart="340dp"
        android:contentDescription="sayap"
        android:src="@drawable/kurang"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText"/>

    <ImageView
        android:id="@+id/img_sayap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginStart="30dp"
        android:contentDescription="sayap"
        android:src="@drawable/sayap2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginStart="120dp"
        android:fontFamily="@font/jockey_one"
        android:shadowColor="#000000"
        android:shadowDx="5.0"
        android:shadowDy="5.0"
        android:shadowRadius="1.0"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#F9E533"
        android:text="Sayap"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText"/>

    <EditText
        android:id="@+id/etSayapQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_marginStart="240dp"
        android:layout_weight="1"
        android:hint="@string/etQuantity2"
        android:inputType="number"
        android:maxLength="3"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:autofillHints="" />

    <ImageView
        android:id="@+id/tambah_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_marginStart="290dp"
        android:contentDescription="sayap"
        android:src="@drawable/tambah"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText"/>

    <ImageView
        android:id="@+id/kurang_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_marginStart="340dp"
        android:contentDescription="sayap"
        android:src="@drawable/kurang"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText"/>

    <ImageView
        android:id="@+id/img_pahaa1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginStart="35dp"
        android:contentDescription="pahaAtas"
        android:src="@drawable/pahaatas3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="275dp"
        android:layout_marginStart="120dp"
        android:fontFamily="@font/jockey_one"
        android:shadowColor="#000000"
        android:shadowDx="5.0"
        android:shadowDy="5.0"
        android:shadowRadius="1.0"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#F9E533"
        android:text="Paha Atas"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText"/>

    <ImageView
        android:id="@+id/img_dada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginStart="30dp"
        android:contentDescription="dada"
        android:src="@drawable/dada4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:layout_marginStart="120dp"
        android:fontFamily="@font/jockey_one"
        android:shadowColor="#000000"
        android:shadowDx="5.0"
        android:shadowDy="5.0"
        android:shadowRadius="1.0"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#F9E533"
        android:text="Dada"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText"/>

    <ImageView
        android:id="@+id/img_kepala2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        android:layout_marginStart="20dp"
        android:contentDescription="kepala"
        android:src="@drawable/kepala52"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText"/>

    <ImageView
        android:id="@+id/img_kepala1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginStart="10dp"
        android:contentDescription="kepala"
        android:src="@drawable/kepala5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:layout_marginStart="120dp"
        android:fontFamily="@font/jockey_one"
        android:shadowColor="#000000"
        android:shadowDx="5.0"
        android:shadowDy="5.0"
        android:shadowRadius="1.0"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#F9E533"
        android:text="Kepala"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText"/>

    <!--    Total transaksi   -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:layout_marginStart="25dp"
        android:fontFamily="@font/jockey_one"
        android:text="Total transaksi:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="580dp"
        android:layout_marginHorizontal="25dp"
        android:background="@color/grey2"
        android:fontFamily="@font/jockey_one"
        android:text="ReplaceWithTotal"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonBatal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="630dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/jockey_one"
        android:shadowColor="#000000"
        android:shadowDx="5.0"
        android:shadowDy="5.0"
        android:shadowRadius="1.0"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="BATAL TRANSAKSI"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonCatat"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="230dp"
        android:layout_marginTop="630dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/jockey_one"
        android:shadowColor="#000000"
        android:shadowDx="5.0"
        android:shadowDy="5.0"
        android:shadowRadius="1.0"
        android:textColor="#3CE500"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="CATAT TRANSAKSI"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText"/>

</androidx.constraintlayout.widget.ConstraintLayout>